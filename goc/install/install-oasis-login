#!/bin/bash
# Install and configure all application software on oasis-login or
#   oasis-login-itb
# Written by Dave Dykstra 3-11-2015

cd

MYSHORTNAME="`hostname -s`"
case "$MYSHORTNAME" in
    oasis-login*);;
    *)  echo "Only run this on an oasis-login* machine"
	exit 2
	;;
esac

set -ex

# puppet sometimes returns error code if it is already running, ignore it
case "$MYSHORTNAME" in
    *-itb)
	puppet agent -t --environment=testing || true
	;;
    *)
	puppet agent -t || true
	;;
esac

PATH="$PATH:/sbin:/usr/sbin"

if [[ $(rpm -qa|grep osg-release) != *osg34* ]]; then
    # update to osg34
    rpm -Uv https://repo.grid.iu.edu/osg/goc/el6/production/x86_64/osg-release-3.4-2.osg34.el6.noarch.rpm
    yum clean --enablerepo='*' all
fi

# disable osg repo because we don't want condor updates from there
yum-config-manager --disable osg >/dev/null

# enable appropriate goc repo
if [[ $MYSHORTNAME == *-itb ]]; then
    yum-config-manager --enable goc-itb >/dev/null
else
    yum-config-manager --enable goc >/dev/null
fi
if [ -n "$OASISDEVREPO" ]; then
    yum-config-manager --enable $OASISDEVREPO >/dev/null
fi

# need yum-priorities to make OSG a higher priority than EPEL
yum -y install yum-priorities

# install condor
yum -y install condor
systemctl enable condor
systemctl start condor

# install oasis
yum -y install oasis-goc oasis-goc-login

systemctl restart iptables

# mount /stage and /home/login directories
if ! grep -q "[ \t]/stage[ \t]" /etc/fstab; then
    echo "vm08:/oasis-share/stage /stage			nfs 	defaults	0 0" >>/etc/fstab
fi
mkdir -p /stage
mount /stage
if ! grep -q "[ \t]/home/login[ \t]" /etc/fstab; then
    echo "vm08:/oasis-share/home/login /home/login	nfs 	defaults	0 0" >>/etc/fstab
fi
mkdir -p /home/login
mount /home/login

# need nfslock for the repos to be on NFS
systemctl enable nfslock
systemctl start nfslock

# make convenience link
mkdir -p /cvmfs
ln -s /stage/oasis /cvmfs/oasis.opensciencegrid.org

# help puppet's gsisshd config a little.  See OO-197
if [ ! -e /etc/grid-security/hostcert.pem ]; then
    ln -s /etc/grid-security/host/cert.pem /etc/grid-security/hostcert.pem
fi
if [ ! -e /etc/grid-security/hostkey.pem ]; then
    ln -s /etc/grid-security/host/key.pem /etc/grid-security/hostkey.pem
fi
systemctl restart gsisshd

# for the status stamp
yum -y install httpd
chkconfig httpd on
service httpd start

# for generate_adduser
yum -y install pwgen

# add users
TMPF=/tmp/install-oasis-login-$$
/usr/share/oasis/generate_adduser >$TMPF.1
while read CMD; do
    USERNAME="`echo "$CMD"|awk '{print $3}'|sed 's/ouser.//'`"
    if [ ! -d /stage/oasis/$USERNAME ]; then
	# wasn't there before, let the cron create it
	continue
    fi
    uid="`stat -c '%u' /stage/oasis/$USERNAME`"
    gid="`stat -c '%g' /stage/oasis/$USERNAME`"
    groupadd -g $gid ouser.$USERNAME
    eval "`echo "$CMD"|sed "s/useradd/useradd -u $uid -g $gid/"`"
done <$TMPF.1
rm $TMPF.1

# add gridmap file
/usr/share/oasis/generate_gridmap >/etc/grid-security/grid-mapfile

# the user's want gcc to be able to compile
yum -y install gcc

# used by /etc/cron.d/oasis-login
mkdir -p /srv/log/oasis /var/lib/oasis
ln -s /srv/log/oasis /var/log
date >/var/lib/oasis/installed

rm -f /root/show_install_msg.sh

set +x

echo
echo "Installation of $MYSHORTNAME completed successfully at `date`"
echo
